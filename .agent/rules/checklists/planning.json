{
    "phases": [
        {
            "id": "planning",
            "name": "Phase 3: Planning",
            "status": "MANDATORY",
            "description": "Define proposed changes, blast radius, and success criteria.",
            "checks": [
                {
                    "id": "implementation_plan_updated",
                    "description": "Update ImplementationPlan.md with proposed changes",
                    "type": "BLOCKER",
                    "validator": "check_planning_docs",
                    "args": [
                        "ImplementationPlan.md"
                    ]
                },
                {
                    "id": "blast_radius_analysis",
                    "description": "Perform blast radius analysis",
                    "type": "WARNING",
                    "validator": "check_planning_docs",
                    "args": [
                        "blast_radius"
                    ]
                },
                {
                    "id": "user_approval_execution",
                    "description": "Get explicit user approval before EXECUTION",
                    "type": "BLOCKER",
                    "validator": "check_plan_approval"
                },
                {
                    "id": "api_documentation",
                    "description": "Include API design documentation if feature involves API changes",
                    "type": "WARNING",
                    "validator": "check_api_documentation"
                },
                {
                    "id": "beads_issue_created",
                    "description": "Create beads issue(s) after approval (BLOCKER before execution)",
                    "type": "BLOCKER",
                    "validator": "check_beads_issue_created"
                },
                {
                    "id": "plan_storage_with_issue_id",
                    "description": "Store plan in .agent/plans/{issue-id}.md with bi-directional links",
                    "type": "BLOCKER",
                    "validator": "check_plan_storage"
                }
            ]
        }
    ]
}